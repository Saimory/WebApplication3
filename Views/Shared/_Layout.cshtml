<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/css_rq.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/scriptrq.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #495057;
        }

        .site-header {
            background-color: #007bff;
            padding: 10px 0;
            color: white;
        }

        .brand {
            display: inline-block;
            vertical-align: middle;
        }

            .brand img {
                margin-right: 10px;
                width: 40px;
                height: 40px;
            }

        .top_list {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: inline-block;
            vertical-align: middle;
            text-align: right;
            width: calc(100% - 60px);
        }

            .top_list li {
                font-size: 18px;
                display: inline-block;
                margin-left: 20px;
            }

            .top_list a {
                text-decoration: none;
                color: white;
            }

        .container.body-content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        footer {
            margin-top: 20px;
            text-align: center;
            color: #6c757d;
        }

        :root {
            --header-background-color: #007bff; 
            --select-focus-color: #007bff; 
 
            .custom-select

        {
            width: 150px;
            padding: 0.375rem 2rem 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
            background-color: var(--header-background-color);
            color: white;
        }

        .custom-select:focus {
            border-color: var(--select-focus-color);
            outline: 0;
            box-shadow: 0 0
    </style>
</head>
<body>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <header class="site-header">
        <div class="container">
            <a href="#" class="brand">
                <img src="~/logo.png" alt="Questions" />
            </a>
            <ul class="top_list">
                <li><b><a href="~/Home/Index">Список вопросов</a></b></li>
                <li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <b><a href="~/Home/Change">Изменение вопросов</a></b>
                    }
                </li>
                <li><b><a href="~/Home/Privacy">Контакты предприятия</a></b></li>
                <li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" asp-controller="Account" asp-action="Logout" class="form-inline">
                            <button type="submit" class="btn btn-link text-dark">Выйти</button>
                        </form>
                    }
                    else
                    {
                        <div class="form-group">
                            <select class="custom-select" onchange="window.location.href=this.value">
                                <option selected disabled>Вход</option>
                                <option value="/Account/Login">Войти</option>
                                <option value="/Account/Register">Зарегистрироваться</option>
                            </select>
                        </div>
                    }
                </li>
            </ul>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2023 - Questions</p>
        </footer>
    </div>
</body>
</html>

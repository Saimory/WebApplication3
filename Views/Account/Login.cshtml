@model LoginViewModel
    <style>

        h2 {
            color: #007bff;
            margin-bottom: 20px; 
            text-align: center; 
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            text-align: left; 
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #495057;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

    .remember-me {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 16px;
    }

        .remember-me label {
            margin-bottom: 0;
            margin-right: 8px;
        }

        .remember-me input {
            margin-top: 2px;
        }


        button {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>

<body>

        <h2>Login</h2>
        <div asp-validation-summary="All"></div>
        <form asp-action="Login" method="post">
            <div>
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" />
            </div>
            <div>
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" />
            </div>
            <div class="remember-me">
                <label asp-for="RememberMe">Remember me:</label>
                <input asp-for="RememberMe" type="checkbox" />
            </div>
            <button type="submit">Login</button>
        </form>

</body>
</html>
